<ion-view class="bulletinBoardCSS">
    <ion-nav-title>公告编辑</ion-nav-title>
    <ion-content has-bouncing="false" scrollbar-y="false">
        <div class="editForm">
            <ul>
                <li>
                    <label class="item item-input">
                        <span class="input-label" id="_label-0">排序号：</span>
                        <input type="text" id="sortid" placeholder="排序号">
                        <span class="tips">序号能够改变显示顺序</span>
                    </label>
                </li>
                <li>
                    <label class="item item-input">
                        <span class="input-label" id="_label-1">标题：</span>
                        <input type="text" id="news_title_id" placeholder="请输入标题">
                    </label>
                </li>
                <li>
                    <label class="item item-input">
                        <!--<span class="input-label" id="_label-2">内容：</span>-->
                        <textarea class="ggbbcontent" id="news_content_id" ng-style="textareaHeight"></textarea>
                    </label>
                </li>
            </ul>
        </div>
        <div class="button1">
            <button class="goback" ng-click="toBack()">返回</button>
            <button class="toedit" ng-click="toEdit()">修改</button>
        </div>
    </ion-content>
</ion-view>