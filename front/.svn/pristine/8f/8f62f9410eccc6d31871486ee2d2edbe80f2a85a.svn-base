.MarketbasedTradIndexCSS {
  * {

  }
  @rem: 144rem;
  background-color: #fff;
  .marketbasedbg{
    line-height: 50px;
    height: 50px;
    background: #fcfcfc;
    .lft {
      text-align: center;
      font-size: 0.28rem;
      color: #454545;
    }

  }
  .marketrbased{
    line-height: 38px;
    width: 110px;
    height: 38px;
    background: #F2F2F2;
    float: right;
    .rft{
      text-align: right;
      font-size: 0.28rem;
      color: #454545;
    }
  }
  .marketbased:nth-child(odd){
    padding: 0.2rem;
    background: #F2F2F2;
    .lft {
      text-align: center;
      font-size: 0.28rem;
      color: #454545;
    }
  }
  .marketbased:nth-child(even){
    padding: 0.2rem;
    background: #ffffff;
    .lft {
      text-align: center;
      font-size: 0.28rem;
      color: #454545;
    }
  }
  .marketList{
    background: #fff;
    margin: 20/@rem;
    border-radius: 40/@rem;
    table {
      width: 100%;
    }
    table th {
      padding: 10px 5px;
      background: #e1effc;
      vertical-align: middle;
      color: #3492e9;
      span {
        display: block;
      }
    }
    table th:first-child {
      //border-top-left-radius: 15px;
      border-right: 1px solid #d7e2ec;
      width: 70px;
    }
    table th:last-child {
      //border-top-right-radius: 15px;
    }
    table td {
      border: 1px solid #fefefe;
      border-collapse: collapse;
      padding: 10px 5px;
      text-align: center;
      vertical-align: middle;
      border-bottom: 1px solid #e1effc;
      span {
        display: block;
      }
    }
    table tr td:first-child {
      border-left: 1px solid #e1effc;
      border-right: 1px solid #e1effc;
      color: #3492e9;
    }
    table tr td:last-child {
      border-right: 1px solid #e1effc;
    }
  }
  .bg{
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    top:0;
    z-index: 9999;
    display: none;
  }
  .MarketbasedShow{
    margin-top: 20/@rem;
    background: #fff;
    .input-label {
      width: 25%;
      font-size: 0.27777778rem;
      text-align: right;
    }
  }

}