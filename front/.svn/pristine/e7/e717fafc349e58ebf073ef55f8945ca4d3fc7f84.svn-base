.erpDetailsCSS{
    @rem: 144rem;
    display: flex;
    flex-direction: column;
    .scroll-content.marginBottom{
        margin-bottom: 44px;
    }
    .progress{
        height: 1em;
        display: flex;
        border: 1px solid #8e8e8e;
    }
    .progress > div:first-child{
        background-color: #33cd5f;
    }
    .text-right{
        text-align: right;
    }
    .document{
        font-size: 1.5em;
        font-weight: 700;
    }
    textarea{
        width: 100%;
    }
    .applyForLine{
        border-top: 1px solid #797979;
        border-bottom: 1px solid #797979;
        padding: 1em 0rem;
    }
    .process{
        display: flex;
    }
    .process > .left{
        position: relative;
    }
    .process > .left::after{
        content: " ";
        width: 0.4em;
        height: e("calc(100% - 1.2em)");
        background-color: #bebebe;
        position: absolute;
        margin: auto;
        top: 1.2em;
        left: e("calc(50% - 0.2em)");
        z-index: -100;
    }
    .process:last-child > .left::after{
        height: 0px;
    }
    .process > .left > .imgBox{
        background-color: #bebebe;
        width: 2.4em;
        height: 2.4em;
        border-radius: 100%;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .process > .left > .imgBox > img{
        width: 100%;
    }
    .process > .right{
        flex: 1;
        display: flex;
        flex-direction: column;
        padding-left: 0.6em;
        font-size: 0.8em;
        color: #bebebe;
    }
    .process > .right > .card{
        padding: 0.3em;
        font-size: 1.2em;
        color: black;
        display: flex;
        line-height: 2.4em;
        min-height: 5em;
        margin-bottom: 1em;
    }
    .process > .right > .card > table tr td:nth-of-type(1){
        vertical-align:middle;
    }
    .process > .right > .card > table tr td:nth-of-type(1){
        font-size: 2em;
    }
    .process > .right > .card > table tr td:nth-of-type(2){
        padding-left: 0.6em;
        width: 100%;
    }
    .process > .right > .card > table tr td:nth-of-type(3){
        white-space:nowrap; 
    }
}