angular.module('BaiYin.power', [
    'ionic',
    'BaiYin.load'
])

.config(['$stateProvider', function($stateProvider) {
    $stateProvider.state('power', {
        url: '/power',
        controller: 'powerController',
        templateUrl: 'power/power.tpl.html',
        cache: 'true',
        authorizedRuleType: ['1']
    })
}])

.controller('powerController', ['$scope','showAlert' ,'pageInitService', '$http', '$state','$ionicTabsDelegate','$interval','$timeout','loadingAnimation',
        function($scope,showAlert,pageInitService,$http,$state,$ionicTabsDelegate,$interval,$timeout,loadingAnimation) {
            $scope.$on('$ionicView.afterEnter', function() {
                $ionicTabsDelegate.select(0);
                getKPI();
                // startInterval();
            });
            $scope.$on('$ionicView.leave',function () {
                stopInterval();
            });
            //全场请求数据
            $scope.toQcData = function () {
                $ionicTabsDelegate.select(0);
                getKPI();
                // startInterval();
            }
            //甘肃数据请求
            $scope.toGsData = function (){
                $ionicTabsDelegate.select(1);
                stopInterval();
                selectGsData();
            }
            //青海数据请求
            $scope.toQhData = function () {
                $ionicTabsDelegate.select(2);
                stopInterval();
                selectQhData();
            }
            //宁夏数据请求
            $scope.toNxData = function () {
                $ionicTabsDelegate.select(3);
                stopInterval();
                selectNxData();
            }
            //新疆数据请求
            $scope.toXjData = function () {
                $ionicTabsDelegate.select(4);
                stopInterval();
                selectXjData();
            }
            //日电量柱状图
            $scope.toDayInfo = function(){
                $state.go('power/pdDay');
            }
            //月电量柱状图
            $scope.toMounthInfo = function(){
                $state.go('power/pdMounth');
            }
            //年电量柱状图
            $scope.toYearInfo = function(){
                $state.go('power/pdYear');
            }
            /**
             * 开启定时器,五分钟执行一次
             */
            function startInterval() {
                $scope.timer = $interval(function(){
                    getKPI();
                },5*60*1000);
            }
            //关闭定时器
            function stopInterval(){
                $interval.cancel($scope.timer);
            }
            //获取日电量、月电量中的其他数据
            function getKPIOther(){
                $http.get('ServiceName=TargetService&TransName=getTotalPower')
                    .then(function(res){
                        console.log(res);
                        loadingAnimation.hideLoading();
                        $scope.companyPowerOther = res.data;
                    },function(error) {
                        loadingAnimation.hideLoading();
                        showAlert.showMsg(error,'','网络异常','确认')
                    })
            }
            // 获取全公司总负荷
            // 获取全公司日发电量
            // 获取集控中心负荷.......
            function getKPI(){
                loadingAnimation.showLoading('数据载入中', 'loding', 0);
                $http.get('ServiceName=TargetService&TransName=getTargetIndex')
                    .then(function(res){
                        loadingAnimation.hideLoading();
                        console.log(res);
                        $scope.companyPower = res.data;
                    },function(error) {
                        loadingAnimation.hideLoading();
                        showAlert.showMsg(error,'','网络异常','确认')
                    })
                // getKPIOther();
            }
            //获取甘肃子发电厂发电量
            function selectGsData(){
                $http.post('ServiceName=TargetService&TransName=gsPower')
                    .then(function (res) {
                        $scope.gsCompanyPower = res.data.gsPower;
                        if (res.code == '0') {
                            draw(res.data.gsHourPower,res.data.dateStr);
                        } else {
                            showAlert.showMsg(res.msg);
                        }
                    }, function (error) {
                        loadingAnimation.hideLoading();
                        showAlert.showMsg(error, '', '网络异常,请检查网络', '确认')
                    });
            }

            //获取青海子发电厂发电量
            function selectQhData() {
                $http.post('ServiceName=TargetService&TransName=qhPower')
                    .then(function (res) {
                        if (res.code == '0') {
                            $scope.qhCompanyPower = res.data.qhPower;
                            draw2(res.data.qhHourPower,res.data.dateStr);
                        } else {
                            showAlert.showMsg(res.msg);
                        }
                    }, function (error) {
                        loadingAnimation.hideLoading();
                        showAlert.showMsg(error, '', '网络异常,请检查网络', '确认')
                    });

            }
            //获取宁夏子发电厂发电量
            function selectNxData() {
                $http.get('ServiceName=TargetService&TransName=nxPower')
                    .then(function (res) {
                        console.log(res);
                        if (res.code == '0') {
                            $scope.nxCompanyPower = res.data.nxPower;
                            draw3(res.data.nxHourPower,res.data.dateStr);
                        } else {
                            showAlert.showMsg(res.msg);
                        }
                    },function (error) {
                        showAlert.showMsg(error,'','网络异常','确认');
                    });
            }
            //获取新疆子发电厂发电量
            function selectXjData() {
                $http.get('ServiceName=TargetService&TransName=xjPower')
                    .then(function (res) {
                        console.log(res);
                        if (res.code == '0') {
                            $scope.xjCompanyPower = res.data.xjPower;
                            draw1(res.data.xjHourPower,res.data.dateStr);
                        } else {
                            showAlert.showMsg(res.msg);
                        }
                    },function (error) {
                        showAlert.showMsg(error,'','网络异常','确认');
                    });
            }

            /**
             * 绘制图
             * @param dayPower
             */
            //甘肃
            function draw(dayPower,dateStr) {
                $scope.daypowerone=[];
                $scope.daypowertwo=[];
                $scope.daypowerthree=[];
                $scope.daypowerfour=[];
                $scope.daypowertimeone=[];
                // console.log(dayPower);
                for (var v in dayPower) {
                    // console.log(v)
                    if(dayPower[v].CONTRACT=='1101'){
                        $scope.daypowerone.push(dayPower[v].DAY_ELE_AMOUNT)
                        $scope.daypowertimeone.push(dayPower[v].REPOART_ID)
                    }
                    if(dayPower[v].CONTRACT=='1201'){
                        $scope.daypowertwo.push(dayPower[v].DAY_ELE_AMOUNT)
                    }
                    if(dayPower[v].CONTRACT=='1301'){
                        $scope.daypowerthree.push(dayPower[v].DAY_ELE_AMOUNT)

                    }
                    if(dayPower[v].CONTRACT=='1401'){
                        $scope.daypowerfour.push(dayPower[v].DAY_ELE_AMOUNT)

                    }
                }
                var option = {
                    title: {
                        subtext: '万KW·h'
                    },
                    toolbox: {
                        show: false,
                        feature: {
                            mark: {show: true},
                            dataView: {show: true, readOnly: false},
                            restore: {show: true},
                            saveAsImage: {show: true}
                        }
                    },
                    dataZoom: {
                        show: false,
                        start: 0
                    },
                    legend: {
                        data: ['捡财塘','北大桥东风电厂','桥东第二风电场','敦煌光伏']
                    },
                    grid: {
                        y2: 80
                    },
                    xAxis: {
                        type: 'category',
                        data: $scope.daypowertimeone
                    },
                    yAxis: [
                        {
                            type: 'value'
                        }
                    ],
                    series: [
                        {
                            name: '捡财塘',
                            type: 'line',
                            smooth: false,
                            symbol: 'none',
                            showAllSymbol: false,
                            data:$scope.daypowerone
                        },
                        {
                            name: '北大桥东风电厂',
                            type: 'line',
                            smooth: false,
                            symbol: 'none',
                            showAllSymbol: false,
                            data:$scope.daypowertwo
                        },
                        {
                            name: '桥东第二风电场',
                            type: 'line',
                            smooth: false,
                            symbol: 'none',
                            showAllSymbol: false,
                            data:$scope.daypowerthree
                        },
                        {
                            name: '敦煌光伏',
                            type: 'line',
                            smooth: false,
                            symbol: 'none',
                            showAllSymbol: false,
                            data:$scope.daypowerfour
                        }

                    ]
                };
                var myChart = echarts.init(document.getElementById('gszst'), 'macarons');
                myChart.setOption(option);
            }
