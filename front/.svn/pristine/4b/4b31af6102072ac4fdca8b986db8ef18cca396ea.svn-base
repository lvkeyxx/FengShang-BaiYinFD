            $scope.tobBoard = function () {
                var sec = token.sec;
                var noAuth = true;
                if (sec != undefined) {
                    if (sec.length > 0) {
                        for (var no in sec) {
                            if (sec[no].SEC_NO == 'G001') {
                                noAuth = false;
                                break;
                            }
                        }
                    }
                }
                if (noAuth) {
                    showAlert('', '您无权操作白板公告', '确认');
                    return;
                }
                $state.go('bulletinBoard')
            };
