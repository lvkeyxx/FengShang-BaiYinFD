        sb.append(MapUtil.stringValue(map,"SORT"));
        sb.append(",'");
        sb.append(MapUtil.stringValue(map,"UPDATE_PERSON"));
        sb.append("','");
        sb.append(MapUtil.stringValue(map,"NEWS_TITLE"));
        sb.append("','");
        sb.append(MapUtil.stringValue(map,"NEWS_CONTENT"));
        sb.append("')");
        sb.append("}");
        return sb.toString();
    }
    
    
    
